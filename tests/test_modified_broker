
from pybacktestchain.data_module import FirstTwoMoments
from pybacktestchain.data_module import get_stocks_data
from pybacktestchain.broker import StopLoss
from pybacktestchain.blockchain import load_blockchain
from package_203_project.modified_broker import Backtest
from datetime import datetime


backtest = Backtest(
    initial_date=datetime(2010, 1, 1),
    final_date=datetime(2012, 1, 1),
    information_class=FirstTwoMoments,
    risk_model=StopLoss,
    rebalance_flag='weekly',  # Choose 'daily', 'weekly', or 'monthly'
    name_blockchain='backtest',
    verbose=False
)


backtest.run_backtest()
backtest.plot_portfolio_weights(start_date='2020-01-01', end_date='2021-01-01')


block_chain = load_blockchain('backtest')
print(str(block_chain))
# check if the blockchain is valid
print(block_chain.is_valid())